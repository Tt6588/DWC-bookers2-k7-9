  <main>
  <p id="notice"><%= notice %></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
      
      <%= render 'books/info', book: @book, user: @user %>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image2.jpg" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <div class="table_width">
          <h3>投稿数の前日比・前週比</h3>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>今日の投稿数</th>
                <th>前日の投稿数</th>
                <th>前日比</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @today_book.count %></td>
                <td><%= @yesterday_book.count %></td>
                <td>
                  <% if @yesterday_book.count == 0 %>
                    前日の投稿はありません
                  <% else %>
                  　<% @the_day_before =   @today_book.count / @yesterday_book.count.to_f  %>
                  　<%= (@the_day_before * 100).round %>%
                 <% end %>
                </td>
              </tr>
            </tbody>
          </table>
          
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>今週の投稿数</th>
                <th>先週の投稿数</th>
                <th>前週比</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @toweek_book.count %></td>
                <td><%= @lastweek_book.count %></td>
                <td>
                  <% if @lastweek_book.count == 0 %>
                    先週の投稿はありません
                  <% else %>
                  　<% @the_week_before =   @toweek_book.count / @lastweek_book.count.to_f  %>
                  　<%= (@the_week_before * 100).round %>%
                 <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      
    </div>
  </div>
</main>